<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="20dp">

    <TextView
        android:id="@+id/serverStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server: Checking..."
        android:textColor="#FFFFFF"
        android:layout_gravity="end"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_abs_logo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READY TO SHIELD"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etCustomDns"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter DNS IP (e.g. 1.1.1.1)"
        android:textColor="#FFFFFF"
        android:textColorHint="#666666"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/vpnButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="START CUSTOM SHIELD"
        android:backgroundTint="#2196F3"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AdGuard: 94.140.14.14 | Cloudflare: 1.1.1.1"
        android:textColor="#AAAAAA"
        android:textSize="10sp"
        android:layout_marginTop="15dp"/>

</LinearLayout>
