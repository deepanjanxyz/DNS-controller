<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NET SHIELD"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"/>

    <FrameLayout
        android:id="@+id/shieldContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp">
        
        <ImageView
            android:id="@+id/btnShieldToggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_lock_idle_lock"
            android:background="@drawable/shield_circle"
            android:padding="40dp"
            android:contentDescription="Shield Toggle"
            app:tint="#00E5FF"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to Connect"
        android:textColor="#888888"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/cardAds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1E1E1E"
            android:padding="15dp"
            android:layout_marginEnd="8dp">
            
            <TextView android:text="BLOCK ADS" android:textColor="#FFFFFF" android:textStyle="bold"/>
            <TextView android:id="@+id/statusAds" android:text="ACTIVE" android:textColor="#00E676" android:textSize="12sp" android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardFamily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1E1E1E"
            android:padding="15dp"
            android:layout_marginStart="8dp">
            
            <TextView android:text="ADULT FILTER" android:textColor="#FFFFFF" android:textStyle="bold"/>
            <TextView android:id="@+id/statusFamily" android:text="OFF" android:textColor="#FF1744" android:textSize="12sp" android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
