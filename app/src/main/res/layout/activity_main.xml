<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:padding="20dp">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NET SHIELD"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btnShieldToggle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:background="@drawable/shield_circle"
        android:padding="50dp"
        app:tint="@color/neon_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAP TO ACTIVATE"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnShieldToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/cardFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_card_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView 
            android:layout_width="24dp" 
            android:layout_height="24dp" 
            android:src="@android:drawable/ic_secure" 
            app:tint="@color/white"/>
            
        <TextView 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:text="Adult Content Filter" 
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="15dp"/>

        <Switch
            android:id="@+id/switchFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/neon_red"
            android:trackTint="#555555"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
