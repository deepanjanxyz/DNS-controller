<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="25dp"
    android:gravity="center">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READY"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <RadioGroup
        android:id="@+id/modeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <RadioButton android:id="@+id/modeAdBlock" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ad-Block Mode" android:textColor="#FFFFFF" android:checked="true"/>
        <RadioButton android:id="@+id/modeFamily" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Family/Safe Mode" android:textColor="#FFFFFF"/>
        <RadioButton android:id="@+id/modeCustom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Custom DNS Mode" android:textColor="#FFFFFF"/>
    </RadioGroup>

    <EditText
        android:id="@+id/etCustomDns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter IP (e.g. 8.8.8.8)"
        android:textColor="#FFFFFF"
        android:textColorHint="#666666"
        android:visibility="gone"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/vpnButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="START"
        android:backgroundTint="#2196F3"
        android:textSize="18sp"/>

</LinearLayout>
