<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center_horizontal">

        <com.airbnb.android.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:lottie_url="https://assets10.lottiefiles.com/packages/lf20_m6cu9mqa.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM READY"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="30dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginBottom="30dp">

            </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:padding="15dp"
            android:orientation="vertical">
            
            <Switch
                android:id="@+id/switchAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ›¡ï¸ Block Ads &amp; Malware"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"/>

            <Switch
                android:id="@+id/switchFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”ž Family Safe Mode"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/vpnButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="ACTIVATE PROTECTION"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:backgroundTint="#00E676"/>

    </LinearLayout>
</ScrollView>
