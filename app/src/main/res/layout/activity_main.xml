<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premium_bg">

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_preferences"
        app:tint="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_top_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NET SHIELD"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:layout_marginTop="60dp"
        app:layout_top_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/shieldContainer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <View
            android:id="@+id/shieldGlow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shield_circle"
            android:alpha="0.3"/>

        <ImageView
            android:id="@+id/btnShieldToggle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@android:drawable/ic_lock_idle_lock"
            android:background="@drawable/shield_circle"
            android:padding="40dp"
            android:layout_centerInParent="true"
            app:tint="#00E5FF"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to Connect"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shieldContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/cardAds"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/glass_card_bg"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">
            
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@android:drawable/ic_menu_close_clear_cancel" app:tint="#00E676"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Block Ads" android:textColor="#FFFFFF" android:layout_marginTop="5dp" android:textStyle="bold"/>
            <TextView android:id="@+id/statusAds" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ON" android:textColor="#00E676" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardFamily"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/glass_card_bg"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true">
            
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@android:drawable/ic_secure" app:tint="#FF1744"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adult Filter" android:textColor="#FFFFFF" android:layout_marginTop="5dp" android:textStyle="bold"/>
            <TextView android:id="@+id/statusFamily" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OFF" android:textColor="#AAAAAA" android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
