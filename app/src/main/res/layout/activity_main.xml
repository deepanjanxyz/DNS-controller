<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM READY"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_abs_logo"
        android:layout_marginBottom="40dp"/>

    <Switch
        android:id="@+id/switchAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block Ads &amp; Trackers"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:minHeight="48dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:layout_marginBottom="15dp"/>

    <Switch
        android:id="@+id/switchFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block Adult Content (Family)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:minHeight="48dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:layout_marginBottom="15dp"/>

    <Switch
        android:id="@+id/switchCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Custom DNS"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etCustomDns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter IP (e.g. 1.1.1.1)"
        android:textColor="#FFFFFF"
        android:textColorHint="#666666"
        android:background="@android:drawable/edit_text"
        android:visibility="gone"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/vpnButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ACTIVATE SHIELD"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"/>

</LinearLayout>
